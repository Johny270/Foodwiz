<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/index.css">
<%- include('../partials/nav') %>
<h1><%= title %></h1>
<div id="profile-index-main">

  <section class="recipes-listing">
    <% profiles.forEach(profile => { %>
      <div>
        <a href="/profiles/<%= profile._id %>">
          <div class="card">
            <img src="<%= profile.avatar %>" alt="<%= profile.name %>'s avatar">
            <div class="card-body">
              <h1 class="card-title"><%= profile.name %></h1>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </section>

  <section class="views-nav">
    <a href="/">Home</a>
    <a href="/recipes">All Recipes</a>
    <a href="#">Update Profile</a>
    <a href='/recipes/new'>Create a Recipe</a>
    <a href="/profiles">Profiles</a>
  </section>
</div>
<footer>
  <div>
    <ul>
      <li><a href="#">About Foodwiz</a></li>
      <li><a href="#">About Jonathan</a></li>
    </ul>
  </div>
  <div>
    <ul>
      <li><a href="#">Contact Us</a></li>
      <li><a href="#">Contact Me</a></li>
    </ul>
  </div>
</footer>



