<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/show.css">
<link href="https://fonts.googleapis.com/css2?family=Aclonica&family=Jomolhari&family=Joti+One&family=Katibeh&family=Kavoon&family=Roboto+Condensed&display=swap" rel="stylesheet">

<%- include('../partials/nav') %>

<h1>This is <%= profile.name %> page</h1>

<div class="all-recipes">
  <% profile.recipes.forEach(recipe => { %>

    <div class="single-recipe">
      <h3><a href="/recipes/<%= recipe._id %>"><h3><%= recipe.title %></h3></a></h3>
      <p><%- recipe.description %></p>
    </div>
   
  <% }) %>
</div>


<%- include('../partials/footer') %>